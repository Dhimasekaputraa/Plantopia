<script>
    function showTab(tabName) {
        // Hide all tabs
        document.getElementById('posts-content').classList.add('hidden');
        document.getElementById('products-content').classList.add('hidden');

        // Remove active state from all tab buttons
        document.getElementById('tab-posts').classList.remove('border-b-green-600');
        document.getElementById('tab-products').classList.remove('border-b-green-600');

        // Show selected tab
        if (tabName === 'posts') {
            document.getElementById('posts-content').classList.remove('hidden');
            document.getElementById('tab-posts').classList.add('border-b-2', 'border-b-green-600');
        } else if (tabName === 'products') {
            document.getElementById('products-content').classList.remove('hidden');
            document.getElementById('tab-products').classList.add('border-b-2', 'border-b-green-600');
        }
    }

    // Initialize - show posts by default
    window.addEventListener('DOMContentLoaded', () => {
        document.getElementById('tab-posts').classList.add('border-b-2', 'border-b-green-600');
    });
</script>