<script>
    function showTab(tabName) {
        const prodContent = document.getElementById('products-content');
        const postContent = document.getElementById('posts-content');
        const prodTab = document.getElementById('tab-products');
        const postTab = document.getElementById('tab-posts');

        // Reset Styles
        prodTab.classList.remove('text-green-600', 'border-b-green-600', 'text-gray-800');
        prodTab.classList.add('text-gray-500');
        
        postTab.classList.remove('text-green-600', 'border-b-green-600', 'text-gray-800');
        postTab.classList.add('text-gray-500');
        
        prodContent.classList.add('hidden');
        postContent.classList.add('hidden');

        // Activate Selected
        if (tabName === 'products') {
            prodContent.classList.remove('hidden');
            prodTab.classList.remove('text-gray-500');
            prodTab.classList.add('text-green-600', 'border-b-green-600');
        } else {
            postContent.classList.remove('hidden');
            postTab.classList.remove('text-gray-500');
            postTab.classList.add('text-green-600', 'border-b-green-600');
        }
    }

    // Default Tab
    window.addEventListener('DOMContentLoaded', () => {
        showTab('products');
    });
</script>