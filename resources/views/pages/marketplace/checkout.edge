<script>
    let cartItems = [];
    let shippingCost = 5.00;

    // Load cart from sessionStorage
    function loadCart() {
        const savedCart = sessionStorage.getItem('plantopia_cart');
        if (savedCart) {
            cartItems = JSON.parse(savedCart);
            renderOrderSummary();
        } else {
            document.getElementById('orderItems').innerHTML = '<p class="text-center text-gray-500 py-4">Your cart is empty</p>';
        }
    }

    function renderOrderSummary() {
        const orderItems = document.getElementById('orderItems');
        
        if (cartItems.length === 0) {
            orderItems.innerHTML = '<p class="text-center text-gray-500 py-4">Your cart is empty</p>';
            calculateTotals();
            return;
        }

        orderItems.innerHTML = cartItems.map(item => `
            <div class="flex justify-between items-center pb-3 border-b">
                <div class="flex items-center gap-2">
                    <span class="text-2xl">${item.emoji}</span>
                    <div>
                        <p class="font-semibold text-gray-800 text-sm">${item.name}</p>
                        <p class="text-xs text-gray-600">Qty: ${item.quantity}</p>
                    </div>
                </div>
                <span class="font-semibold text-gray-800">$${(item.price * item.quantity).toFixed(2)}</span>
            </div>
        `).join('');

        calculateTotals();
    }

    function calculateTotals() {
        const subtotal = cartItems.reduce((sum, item) => sum + (item.price * item.quantity), 0);
        const tax = subtotal * 0.1; // 10% tax
        const total = subtotal + shippingCost + tax;

        document.getElementById('subtotal').textContent = `$${subtotal.toFixed(2)}`;
        document.getElementById('tax').textContent = `$${tax.toFixed(2)}`;
        document.getElementById('total').textContent = `$${total.toFixed(2)}`;
    }

    // Handle shipping method change
    document.addEventListener('change', (e) => {
        if (e.target.name === 'shipping') {
            if (e.target.value === 'standard') shippingCost = 5.00;
            if (e.target.value === 'express') shippingCost = 15.00;
            if (e.target.value === 'pickup') shippingCost = 0.00;
            
            document.getElementById('shippingCost').textContent = `$${shippingCost.toFixed(2)}`;
            calculateTotals();
        }
    });

    function completeOrder() {
        if (cartItems.length === 0) {
            alert('Your cart is empty!');
            return;
        }
        alert('Thank you for your order! This is a demo. In production, this would process payment.');
        sessionStorage.removeItem('plantopia_cart');
        window.location.href = '/marketplace';
    }

    // Initialize
    loadCart();
</script>