<script>
    // Ambil stok maksimal dari data server yang dirender ke atribut max input
    function getMaxStock() {
        const input = document.getElementById('quantity');
        return parseInt(input.getAttribute('max')) || 1;
    }

    // Fungsi update via tombol +/-
    function updateQty(change) {
        const input = document.getElementById('quantity');
        let currentVal = parseInt(input.value) || 1;
        let newVal = currentVal + change;
        
        const maxStock = getMaxStock();

        if (newVal < 1) newVal = 1;
        if (newVal > maxStock) newVal = maxStock;

        input.value = newVal;
    }

    // Fungsi validasi saat user mengetik manual
    function validateInput(input) {
        let val = parseInt(input.value);
        const maxStock = getMaxStock();

        if (isNaN(val) || val < 1) {
            input.value = 1;
        } else if (val > maxStock) {
            input.value = maxStock;
            // Opsional: alert("Maksimal stok tersedia hanya " + maxStock);
        }
    }

    // Sinkronisasi sebelum submit form
    function syncQuantity() {
        document.getElementById('formQuantity').value = document.getElementById('quantity').value;
    }
</script>