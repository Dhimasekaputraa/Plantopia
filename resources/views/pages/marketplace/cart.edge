<script>
    // Helper untuk tombol +/- di halaman Cart
    // Tombol ini mengubah nilai input, lalu mensubmit form pembungkusnya
    function updateCartQty(btn, change) {
        const form = btn.closest('form');
        const input = form.querySelector('input[name="quantity"]');
        
        let currentVal = parseInt(input.value) || 0;
        const maxStock = parseInt(input.getAttribute('max')) || 999;
        let newVal = currentVal + change;

        // Validasi sisi klien
        if (newVal < 1) return; // Tidak boleh kurang dari 1 (gunakan tombol remove untuk hapus)
        if (newVal > maxStock) return; // Tidak boleh lebih dari stok

        input.value = newVal;
        form.submit(); // Submit form otomatis
    }
</script>